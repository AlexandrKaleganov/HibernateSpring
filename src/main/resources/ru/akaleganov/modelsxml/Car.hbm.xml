<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="ru.akaleganov.modelsxml.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="marka" column="marka_id" class="ru.akaleganov.modelsxml.Marka"/>
        <many-to-one name="model" column="model_id" class="ru.akaleganov.modelsxml.Model"/>
        <many-to-one name="transmission" column="transmission_id" class="ru.akaleganov.modelsxml.Transmission"/>
        <property name="yar" column="yar"/>
        <one-to-one name="announcement" class="ru.akaleganov.modelsxml.Announcement" constrained="true"/>
        <bag name="photo" table="photo" inverse="true" cascade="all-delete-orphan">
            <key column="photo" not-null="true"/>
            <one-to-many class="ru.akaleganov.modelsxml.Photo"/>
        </bag>
    </class>
</hibernate-mapping>