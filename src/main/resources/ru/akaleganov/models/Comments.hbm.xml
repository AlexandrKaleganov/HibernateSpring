<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="ru.akaleganov.models.Comments" table="comments">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="comment" column="comment"/>
        <many-to-one name="autor" column="user_id" class="ru.akaleganov.models.User"/>
        <many-to-one name="item" column="item_id" class="ru.akaleganov.models.Item"/>
    </class>
</hibernate-mapping>
