<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="ru.akaleganov.models.Marka" table="marka">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <bag name="models" table="model" inverse="true" cascade="all-delete-orphan">
            <key column="marka_id"/>
            <one-to-many class="ru.akaleganov.models.Model"/>
        </bag>
    </class>
</hibernate-mapping>